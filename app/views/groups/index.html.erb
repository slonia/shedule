<div class="div_cp">
  Группы
</div>
<div class="div_st">
<table class="ed_tb">
  <tr>
    <th>Название</th>
    <th>Курс</th>
    <th>Факультет</th>
    <th>Вуз</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @groups.each do |group| %>
  <% course=Course.find(group.course_id) %>
  <% faculty=Faculty.find(course.faculty_id) %>
  <% university=University.find(faculty.university_id) %>
  <tr class="<%= cycle("odd", "even") %>">
    <td><%= group.name %></td>
    <td><%= course.num %></td>
    <td><%= faculty.name %></td>
    <td><%= university.name %></td>
    <td><%= link_to 'Показать', group %></td>
    <td><%= link_to 'Редактировать', edit_group_path(group) %></td>
    <td><%= link_to 'Удалить', group, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Добавить', new_group_path %>
</div>