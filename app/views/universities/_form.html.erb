<%= form_for(@university) do |f| %>
  <% if @university.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@university.errors.count, "error") %> мешает сохранению этого университета:</h2>

      <ul>
      <% @university.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Название: " %>
    <%= f.text_field :name %>
  </div>
  <%= f.fields_for :faculties do |builder| %>
    <%= render 'faculty_fields', f: builder %>
  <% end %>
  <%= link_to_add_fields "Добавить факультет", f, :faculties %>
  <div class="actions">
    <%= f.submit  "Сохранить" %>
  </div>
<% end %>
