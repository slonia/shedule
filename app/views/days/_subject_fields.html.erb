<fieldset class="sub" >
	<%= f.label :name, "Название" %>
	<%= f.text_field :name, :size => nil %>
	<%= f.label :place, "Место" %>
	<%= f.text_field :place, :size => nil %>
	<%= f.label :teacher, "Преподаватель"%>
	<%= f.text_field :teacher, :size => nil %>
	<%= f.label :sub_type, "Тип" %>
	<%= f.select :sub_type, options_for_select(Array[*Subject::S_TYPES.collect {|v,i| [v,Subject::S_TYPES.index(v)] }]) %>
	<%= f.hidden_field :num, :size => nil, :class => "numpan" %>
     <br>
      <%= f.hidden_field :_destroy %>
      <%= link_to "Удалить предмет", '#', class: "remove_fields" %>
</fieldset>